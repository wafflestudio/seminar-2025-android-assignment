<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp">

        <!-- 상단 뒤로가기 + 로그인 -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_back"
                android:contentDescription="뒤로가기"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- 헤더 구분선 -->
        <View
            android:id="@+id/headerDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            android:layout_marginTop="8dp"/>  <!-- LinearLayout과의 간격을 위해 marginTop 추가 -->


        <!-- Slack 로고 -->
        <FrameLayout
            android:id="@+id/logoContainer"
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_logo_rounded"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/slack_logo"
                android:contentDescription="Slack 로고"/>
        </FrameLayout>

        <!-- 안내 텍스트 -->
        <TextView
            android:id="@+id/urlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 Slack 워크스페이스 URL"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/logoContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- 입력창 -->
        <EditText
            android:id="@+id/editTextUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="workspace-url.slack.com"
            android:inputType="textUri"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/urlLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- 계속 버튼 -->
        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="계속"
            android:enabled="false"
            android:background="@drawable/bg_btn_continue"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/editTextUrl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- 구분선 -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/buttonContinue"
            android:layout_marginTop="32dp"/>

        <!-- 추가 옵션 -->
        <TextView
            android:id="@+id/helpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="워크스페이스 URL을 모르시나요?"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/extraOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/helpText">

            <LinearLayout
                android:id="@+id/workspace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/helpText">

                <ImageView
                    android:id="@+id/workspaceIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/grid_view"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="workspace"/>

                <LinearLayout
                    android:id="@+id/workspaceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/helpText">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="워크스페이스 찾기"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일 사용"
                        android:textSize="10sp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/GovSlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/helpText">

                <ImageView
                    android:id="@+id/GovSlackIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/account_balance"
                    android:contentDescription="GovSlack 아이콘"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GovSlack에 로그인"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
